@model List<KidKinder.Entities.Gallery>

<div class="col-12 text-center mb-2">
    <ul class="list-inline mb-4" id="portfolio-flters">
      
        <div class="col-12 text-center mb-2">

            <ul class="list-inline mb-4" id="portfolio-flters">
                <li class="btn btn-outline-primary m-1 active" data-filter="*">
                    All
                </li>
                @if (true)
                {

                }
                @foreach (var item in Model)

                {
                    <li class="btn btn-outline-primary m-1" data-filter=".@item.Title">
                        @item.Title
                    </li>
                }
            </ul>
        </div>



        <div class="row portfolio-container">

            @foreach (var item in Model)
            {
                <div class="col-lg-4 col-md-6 mb-4 portfolio-item @item.Title">
                    <div class="position-relative overflow-hidden mb-2">
                        <img class="img-fluid w-100" src="@item.ImageUrl" alt="" />
                        <div class="portfolio-btn bg-primary d-flex align-items-center justify-content-center">
                            <a href="@item.ImageUrl" data-lightbox="portfolio">
                                <i class="fa fa-plus text-white" style="font-size: 60px"></i>
                            </a>
                        </div>
                    </div>
                </div>

            }
        </div>

    </ul>
</div>


