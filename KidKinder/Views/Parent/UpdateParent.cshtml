@model KidKinder.Entities.Parent
@{
    ViewBag.Title = "UpdateParent";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="pcoded-inner-content">
    <div class="main-body">
        <div class="page-wrapper">
            <div class="page-body">
                <div class="row">
                    <div class="col-sm-12">
                        <div class="card">
                            <div class="card-header">
                                <h5>Add Parent</h5>
                            </div>
                            <div class="card-block">
                                <form method="post">
                                    <div class="form-group row">
                                        <label class="col-sm-2 col-form-label">#</label>
                                        <div class="col-sm-10">
                                            @Html.TextBoxFor(x => x.ParentId, new { @class = "form-control" })
                                        </div>
                                    </div>

                                    <div class="form-group row">
                                        <label class="col-sm-2 col-form-label">Parent Name </label>
                                        <div class="col-sm-10">
                                            @Html.TextBoxFor(x => x.Name, new { @class = "form-control" })
                                        </div>
                                    </div>
                                    <div class="form-group row">
                                        <label class="col-sm-2 col-form-label">Parent Surname</label>
                                        <div class="col-sm-10">
                                            @Html.TextBoxFor(x => x.Surname, new { @class = "form-control" })
                                        </div>
                                    </div>


                                    <div class="form-group row">
                                        <label class="col-sm-2 col-form-label">Parent Email</label>
                                        <div class="col-sm-10">
                                            @Html.TextBoxFor(x => x.Email, new { @class = "form-control" })
                                        </div>
                                    </div>

                                    <div class="form-group row">
                                        <label class="col-sm-2 col-form-label">Parent Phone</label>
                                        <div class="col-sm-10">
                                            @Html.TextBoxFor(x => x.Phone, new { @class = "form-control" })
                                        </div>
                                    </div>
                                    <div class="form-group row">
                                        <label class="col-sm-2 col-form-label">Parent Image</label>
                                        <div class="col-sm-10">
                                            @Html.TextBoxFor(x => x.Adress, new { @class = "form-control" })
                                        </div>
                                    </div>
                            </div>
                        </div>
                        </form>
                        <button class="btn btn-primary">Save Parent</button>

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


